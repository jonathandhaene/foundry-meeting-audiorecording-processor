# Azure Speech Services Configuration
AZURE_SPEECH_KEY=your_speech_service_key_here
AZURE_SPEECH_REGION=your_region_here

# Azure Text Analytics (Content Understanding)
AZURE_TEXT_ANALYTICS_KEY=your_text_analytics_key_here
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Azure Storage (Optional - for file storage)
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=meeting-audio-files

# OpenAI API (Optional - for Whisper API transcription)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace (Optional - for Wav2Vec 2.0 transcription)
# Token is required for private models or to bypass rate limits on the Inference API
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
# Set to a Foundry-deployed endpoint to use your own inference server
# Leave blank to use the default HuggingFace Inference API
HUGGINGFACE_ENDPOINT_URL=

# Processing Configuration
DEFAULT_LANGUAGE=en-US
ENABLE_SPEAKER_DIARIZATION=true
MAX_SPEAKERS=10
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
